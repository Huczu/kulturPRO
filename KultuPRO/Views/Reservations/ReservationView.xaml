<Window x:Class="KulturPRO.Views.Reservations.ReservationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReservationView" Height="480" Width="640">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <TextBlock 
            Text="tu powinna się pokazać sala z narysowanymi wybranymi miejscami :)" 
            Grid.Row="0"
            Grid.ColumnSpan="2"/>
        <DataGrid 
            Grid.Row="1"
            Grid.ColumnSpan="2" >
        </DataGrid>
        <Button
            Name="ButtonSave"
            Grid.Row="2"
            Grid.Column="1">
            <TextBlock>Zapisz</TextBlock>
        </Button>
    </Grid>
</Window>
